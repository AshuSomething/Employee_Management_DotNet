@page
@model WebApp.Pages.EditModel
@{
}

<form class="container shadow p-3 mb-5 bg-white roundedr" method="post">
    <div class="form-group">
        <label for="employeeId">Id</label>
        <input type="number" class="form-control" id="employeeId" aria-describedby="emailHelp" placeholder="Enter Id of Employee to be updated" asp-for="Employee.Id">
    </div>
    <div class="form-group">
        <label for="employeeName">Name</label>
        <input type="text" class="form-control" id="employeeName" aria-describedby="emailHelp" placeholder="Enter new name" asp-for="Employee.Name">
    </div>
    <div class="form-group">
        <label for="employeeEmail">Email</label>
        <input type="email" class="form-control" id="employeeEmail" placeholder="Enter new description" asp-for="Employee.Email">
    </div>
    <div class="form-group">
        <label for="employeePassword">Password</label>
        <input type="password" class="form-control" id="employeePassword" placeholder="Enter new description" asp-for="Employee.Password">
    </div>

    <button type="submit" class="btn btn-primary mt-2">Submit</button>
</form>