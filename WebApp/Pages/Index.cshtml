@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <h1 class="text-center">Employee List</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th> </th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.employees)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                        <td>
                            <a href="@Url.Page("EmployeeDetails", new { id = user.Id })" style="text-decoration: underline;">Details</a>
                        </td>

                        <td>
                            <a href="@Url.Page("Attandances/abcd", new { id = user.Id })" style="text-decoration: underline;">Attendance</a>
                        </td>
                    <td>
                        <a href="@Url.Page("Delete", new { id = user.Id })" style="text-decoration: underline;">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
